<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.dbope.restaurantadvisor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantAdvisor"
        android:usesCleartextTraffic="true">
        <activity android:name=".AjouterRestaurantsActivity"></activity>
        <activity android:name=".MenuActivity" />
        <activity android:name=".RestaurantClickedActivity" />
        <activity android:name=".RecupereRestaurantsActivity" />
        <activity android:name=".AuthActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>